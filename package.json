{
  "name": "digital-planning-data-schemas",
  "version": "0.0.1",
  "description": "Digital Planning Schemas",
  "main": "schema/schema.json",
  "scripts": {
    "build": "pnpm build-schema:dist && pnpm build-json-examples",
    "build-json-examples": "pnpm ts-node scripts/build-json-examples.ts",
    "build-schema:dev": "pnpm ts-json-schema-generator --path 'types/**/*.ts' --out 'schema/schema.json' --type Schema --id '@next'",
    "build-schema:dist": "pnpm ts-json-schema-generator --path 'types/**/*.ts' --out 'schema/schema.json' --type Schema --id $VERSION",
    "lint": "gts lint",
    "check": "tsc --noEmit",
    "fix": "gts fix",
    "test": "pnpm build-schema:dev && vitest"
  },
  "keywords": [],
  "author": "Open Systems Lab",
  "license": "MPL2",
  "devDependencies": {
    "@types/node": "18.16.1",
    "gts": "^5.0.0",
    "jsonschema": "^1.4.1",
    "typescript": "~5.1.6",
    "vitest": "^0.34.1"
  },
  "dependencies": {
    "ts-json-schema-generator": "^1.2.0",
    "ts-node": "^10.9.1"
  }
}
